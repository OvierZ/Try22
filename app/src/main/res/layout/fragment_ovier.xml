<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FCEEE6"
    tools:context=".ui.ovier.OvierFragment">

    <androidx.cardview.widget.CardView
        android:id="@+id/productCard1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="16dp"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:cardCornerRadius="12dp"
        app:cardElevation="4dp">

    </androidx.cardview.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:orientation="horizontal"
        android:padding="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/productCard1">

        <ImageView
            android:id="@+id/productCard1_image"
            android:layout_width="72dp"
            android:layout_height="69dp"
            android:src="@drawable/bunny" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:id="@+id/productCard1_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Iphone"
                android:textSize="18sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/productCard1_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:text="Overpriced and anti consumerist design, damn good software and performance though."
                android:textSize="14sp" />
        </LinearLayout>

        <Button
            android:id="@+id/productCard1_buttonDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ver Detalles" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>