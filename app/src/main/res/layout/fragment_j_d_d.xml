<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true"> <!-- Hace que el ScrollView ocupe todo el espacio disponible -->

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        tools:context=".ui.JDD.JDDFragment"
        android:background="#FCEEE5">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp"
            android:gravity="center_horizontal">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                tools:ignore="VisualLintOverlap"
                android:textAlignment="center"/>

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/bunny"
                android:layout_marginTop="10dp"
                tools:ignore="ContentDescription" />

            <Button
                android:id="@+id/generate_id_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Generar ID"
                android:layout_marginTop="10dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/textView2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/nombre_del_producto"
                android:textColor="#000000"
                android:textAlignment="center"
                android:textSize="30sp"
                android:textStyle="bold"
                tools:ignore="VisualLintOverlap"
                android:layout_marginTop="20dp"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/descripci_n_detallada_del_producto_aqu_puedes_incluir_informaci_n_sobre_las_caracter_sticas_materiales_tama_o_y_cualquier_otro_detalle_importante"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="20sp"
                android:layout_marginTop="20dp"
                tools:ignore="VisualLintLongText,VisualLintOverlap" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/precio"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:textStyle="bold"
                android:layout_marginTop="20dp"
                tools:ignore="VisualLintOverlap" />

            <TextView
                android:id="@+id/textView5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/_99_99"
                android:textAlignment="center"
                android:textColor="#000000"
                android:textSize="25sp"
                android:layout_marginTop="20dp"
                tools:ignore="VisualLintOverlap" />

            <Button
                android:id="@+id/button_comprar"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:text="@string/comprar"
                android:background="#0000FF"
                tools:ignore="VisualLintOverlap" />

            <Button
                android:id="@+id/button2"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:background="#000000"
                android:text="@string/agregar_al_carrito"
                tools:ignore="VisualLintOverlap" />

            <Button
                android:id="@+id/button3"
                android:layout_width="300dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="20dp"
                android:background="#000000"
                android:text="Wishlist"
                tools:ignore="VisualLintOverlap" />
        </LinearLayout>
    </FrameLayout>
</ScrollView>
